# RADCURE Processor Configuration
# Copy this file to .env and fill in your actual credentials
# Never commit .env to version control!
# 
# To use: cp env.example .env
# Then edit .env with your actual credentials

# ============================================================================
# AWS Credentials (Required for processing)
# ============================================================================
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_REGION=eu-west-1

# ============================================================================
# Dataset Configuration (Required for processing)
# ============================================================================
MAIN_PATH=/path/to/your/dataset/RadcureComplete/
AWS_BUCKET_NAME=your-bucket-name
AWS_FOLDER=RADCURE/all_cases/

# ============================================================================
# Processing Configuration (Optional)
# ============================================================================
ORGAN_DICTIONARY_PATH=/path/to/radcure_dictionary.json
PROCESSED_CASES_FILE=/path/to/processed_cases.txt
FAILED_CASES_FILE=/path/to/processed_cases_failed.txt
REVERSE_SLICES=False
SLICE_EXPANSION=5

# ============================================================================
# nnUNet Training Configuration (Required for training)
# ============================================================================
# Path to your DatasetXXX_TotalSegmentator folder (created by split_dataset.py)
# This folder should contain: imagesTr, imagesTs, imagesVa, labelsTr, labelsTs, labelsVa
DATASET_FOLDER=/path/to/DatasetXXX_TotalSegmentator/

# Path to nnUNet installation (optional, has default)
NNUNET_PATH=/path/to/nnUNet

# Base path for nnUNet raw/preprocessed/results folders (optional, has default)
NNUNET_RETRAIN_PATH=/path/to/nnunet_retrain

# Override auto-detected dataset ID (optional)
# DATASET_ID=150

# Training configuration (optional)
NNUNET_CONFIGURATION=3d_fullres
NNUNET_TRAINER=nnUNetTrainerNoMirroring
NNUNET_FOLD=0
NNUNET_NUM_PROCESSES=1

# Prediction configuration (optional)
NNUNET_DISABLE_TTA=True
NNUNET_PREDICTION_FOLD=0

# Evaluation configuration (optional)
EVALUATION_NUM_CPUS=8
SURFACE_DICE_TOLERANCE=3.0

# Logging directory (optional)
LOG_DIR=./logs

