# nnUNet Training Configuration
# Copy this file to .env and fill in your actual paths
# Or set these as environment variables

# Required: Path to your DatasetXXX_TotalSegmentator folder
# This folder should contain: imagesTr, imagesTs, imagesVa, labelsTr, labelsTs, labelsVa
DATASET_FOLDER=/path/to/DatasetXXX_TotalSegmentator/

# Required: Path to organ dictionary JSON file (created by radcure_processor)
ORGAN_DICTIONARY_PATH=/path/to/radcure_dictionary.json

# Optional: Path to nnUNet installation
NNUNET_PATH=/path/to/nnUNet

# Optional: Base path for nnUNet raw/preprocessed/results folders
NNUNET_RETRAIN_PATH=/path/to/nnunet_retrain

# Optional: Override auto-detected dataset ID
# DATASET_ID=150

# Optional: Training configuration
NNUNET_CONFIGURATION=3d_fullres
NNUNET_TRAINER=nnUNetTrainerNoMirroring
NNUNET_FOLD=0
NNUNET_NUM_PROCESSES=1

# Optional: Prediction configuration
NNUNET_DISABLE_TTA=True
NNUNET_PREDICTION_FOLD=0

# Optional: Evaluation configuration
EVALUATION_NUM_CPUS=8
SURFACE_DICE_TOLERANCE=3.0

# Optional: Logging directory
LOG_DIR=./logs

